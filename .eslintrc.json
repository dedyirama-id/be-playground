{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json", "./tsconfig.test.json"]
    },
    "rules": {
        "@typescript-eslint/no-misused-promises": "off",
        "@typescript-eslint/semi": ["error", "always"]
    }
}
